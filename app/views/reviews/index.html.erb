<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<table>
  <thead>
  <tr>
    <th>Teacher</th>
    <th>Review</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @reviews.each do |review| %>
    <% if current_user.type == "Teacher" && review.teacher_id == current_user.id %>
      <tr>
        <td><%= Teacher.find(review.teacher_id).name %></td>
        <td><%= review.review %></td>
        <td><%= link_to 'Show', review %></td>
      </tr>
    <% end %>
    <% if current_user.type == "Admin" %>
      <tr>
        <td><%= Teacher.find(review.teacher_id).name %></td>
        <td><%= review.review %></td>
        <td><%= link_to 'Show', review %></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

