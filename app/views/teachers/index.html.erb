<p id="notice"><%= notice %></p>

<h1>Teachers</h1>

<% if current_user.type == "Admin" %>
  <table>
    <thead>
    <tr>
      <th>Name</th>
      <th>Discipline</th>
      <th>Email</th>
      <th>Phone Number</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.name %></td>
        <td><%= teacher.discipline %></td>
        <td><%= teacher.email %></td>
        <td><%= teacher.phone_num %></td>
        <td><%= teacher.addr %></td>
        <td><%= link_to 'Show', teacher %></td>
        <% if current_user.type == "Admin" %>
          <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
          <td><%= link_to 'Delete', teacher, method: :delete, data: {confirm: 'Are you sure?'} %></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Teacher', new_teacher_path %>|
  <%= link_to 'Home', welcome_url %>
<% else %>
  <h4>You do not have permission to view this page</h4>
  <%= link_to 'Home', welcome_url %>
<% end %>
