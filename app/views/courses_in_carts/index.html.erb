<p id="notice"><%= notice %></p>

<h1>Course Cart</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Name</th>
      <th>Price</th>
      <th>ID</th>
      <th>Cart ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses_in_carts.each do |courses_in_cart| %>
    <div style="display:none;visible:hidden">
      <%= course = Course.find_by(id: courses_in_cart.course_id)%>
    </div>
      <tr>
        <td><%= course.number %></td>
        <td><%= course.name %></td>
        <td><%= course.price %></td>
        <td><%= courses_in_cart.course_id %></td>
        <td><%= courses_in_cart.cart_id %></td>
        <td><%= link_to 'Remove Course', courses_in_cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

  </tbody>
</table>

<br>

